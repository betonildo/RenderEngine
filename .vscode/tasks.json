    // BE AWARE OF SDL2 ARCH VERSION, 1 HOUR TO REMEMBER THAT SDL2 64 WAS BEING USED
    "version": "0.1.0",
    "command": "g++",
    "isShellCommand": true,
    "args": [
        "-Wall", "-std=c++11", "-g",
            "-o", "main",
            "src/*.cpp",
            //"external/Memallocator/src/*.cpp",
            "-Iinclude/",
            "-Iexternal/SDL2205/include/",
            //"-Iexternal/Memallocator/include/",
            //"-Iexternal/LinearMath/include/",

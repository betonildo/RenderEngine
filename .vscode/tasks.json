        "-w", "-Wl,-subsystem,windows",
            "-lmingw32",
            "-lSDL2",
            "-lSDL2main",
            "-lSDL2.dll",
            "-lopengl32",
            "-lgdi32"
    ],
    "showOutput": "always",
    "echoCommand" : true
}